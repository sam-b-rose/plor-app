{
  "name": "plor",
  "version": "0.0.1",
  "description": "A social media post scheduler",
  "author": "Sam Rose <samrose3@gmail.com>",
  "private": true,
  "prettier": {
    "singleQuote": true,
    "semi": true
  },
  "scripts": {
    "dev": "backpack dev",
    "debug": "backpack dev --inspect",
    "build": "cross-env NODE_ENV=production run-p build-client build-server",
    "start": "node ./dist/server/main.js",
    "now-start": "node ./dist/server/main.js",
    "stop": "run-p stop-*",
    "deploy": "node ./scripts/deploy.js",
    "deploy-prod": "cross-env NODE_ENV=production node ./scripts/deploy.js",
    "create-admin": "node ./scripts/create-admin.js",
    "git": "run-s git-*",
    "start-app": "pm2 start ./dist/server/main.js -i max",
    "stop-app": "pm2 delete all",
    "start-db": "mongod --fork --dbpath ./db/data --logpath ./db/logs/mongodb.log",
    "stop-db": "mongo --eval \"db.getSiblingDB('admin').shutdownServer()\"",
    "build-server": "backpack build",
    "build-client": "nuxt build",
    "clean": "rimraf ./db",
    "precommit": "pretty-quick --staged && run-s lint",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "git-pull": "git pull",
    "git-push": "git add . && git commit -m 'General Update' && git push -u origin master"
  },
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.5",
    "@fortawesome/fontawesome-free-brands": "^5.0.9",
    "@fortawesome/fontawesome-free-regular": "^5.0.9",
    "@fortawesome/fontawesome-free-solid": "^5.0.9",
    "@fortawesome/fontawesome-pro-regular": "^5.0.13",
    "@fortawesome/vue-fontawesome": "^0.0.22",
    "@nuxtjs/component-cache": "^1.1.1",
    "@nuxtjs/pwa": "^2.0.3",
    "airtable": "^0.5.6",
    "animate.css": "^3.6.1",
    "aos": "^2.3.0",
    "autoprefixer": "^8.4.1",
    "axios": "^0.17.1",
    "backpack-core": "^0.4.3",
    "body-parser": "^1.18.2",
    "bulma": "^0.6.2",
    "connect-mongo": "^2.0.1",
    "cookie-parser": "^1.4.3",
    "cross-env": "^5.1.1",
    "crypto": "^1.0.1",
    "css-doodle": "^0.3.0",
    "date-fns": "^1.29.0",
    "dotenv": "^4.0.0",
    "es6-promisify": "^6.0.0",
    "express": "^4.16.2",
    "express-list-endpoints": "^3.0.1",
    "express-server-error": "^0.0.6",
    "express-session": "^1.15.1",
    "express-validator": "^5.1.2",
    "global": "^4.3.2",
    "html-to-text": "^4.0.0",
    "juice": "^4.2.3",
    "lodash": "^4.17.10",
    "md5": "^2.2.1",
    "mongoose": "^4.13.5",
    "mongoose-mongodb-errors": "^0.0.2",
    "node-sass": "^4.8.3",
    "nodemailer": "^4.6.4",
    "npm-run-all": "^4.1.2",
    "nuxt": "^1.4.0",
    "nuxt-sass-resources-loader": "^2.0.0",
    "oauth": "^0.9.15",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^5.0.0",
    "portal-vue": "^1.3.0",
    "pug": "^2.0.0-rc.4",
    "slugs": "^0.1.3",
    "typescript": "^3.1.1",
    "uuid": "^3.1.0",
    "validator": "^9.1.2",
