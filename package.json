{
  "name": "plor",
  "version": "0.0.1",
  "description": "A social media post scheduler",
  "author": "Sam Rose <samrose3@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "backpack dev",
    "debug": "backpack dev --inspect",
    "build": "cross-env NODE_ENV=production run-p build-client build-server",
    "start": "cross-env NODE_ENV=production run-p start-app",
    "now-start": "node ./dist/server/main.js",
    "stop": "run-p stop-*",
    "deploy": "node ./scripts/deploy.js",
    "create-admin": "node ./scripts/create-admin.js",
    "git": "run-s git-*",
    "start-app": "pm2 start ./dist/server/main.js -i max",
    "stop-app": "pm2 delete all",
    "start-db": "mongod --fork --dbpath ./db/data --logpath ./db/logs/mongodb.log",
    "stop-db": "mongo --eval \"db.getSiblingDB('admin').shutdownServer()\"",
    "build-server": "backpack build",
    "build-client": "nuxt build",
    "clean": "rimraf ./db",
    "precommit": "run-s lint",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "git-pull": "git pull",
    "git-push": "git add . && git commit -m 'General Update' && git push -u origin master"
  },
  "dependencies": {
    "@nuxtjs/component-cache": "^1.1.1",
    "@nuxtjs/pwa": "^2.0.3",
    "autoprefixer": "^8.0.0",
    "axios": "^0.17.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.2",
    "bulma": "^0.6.2",
    "compose-middleware": "^3.0.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "cross-env": "^5.1.1",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "express-jwt": "^5.3.0",
    "express-jwt-blacklist": "^1.1.0",
    "express-list-endpoints": "^3.0.1",
    "express-server-error": "^0.0.6",
    "express-session": "^1.15.6",
    "js-cookie": "^2.2.0",
    "jsonwebtoken": "^8.1.0",
    "jwt-decode": "^2.2.0",
    "mongodb": "^2.2.33",
    "mongoose": "^4.13.5",
    "node-sass": "^4.8.3",
    "npm-run-all": "^4.1.2",
    "nuxt": "^1.4.0",
    "oauth": "^0.9.15",
    "pm2": "^2.8.0",
    "pug": "^2.0.0-rc.4",
    "pug-loader": "^2.3.0",
    "sass-loader": "^6.0.7",
    "semantic-ui-css": "^2.2.14",
    "slug": "^0.9.1",
    "source-map-support": "^0.5.0",
    "uuid": "^3.1.0",
    "validator": "^9.1.2",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.2",
    "backpack-core": "^0.4.3",
    "eslint": "^4.12.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-vue": "^4.4.0",
    "file-loader": "^1.1.5",
    "now-client": "^1.1.6",
    "nuxt-sass-resources-loader": "^2.0.0",
    "prettier": "^1.11.1",
    "rimraf": "^2.6.2"
  }
}
